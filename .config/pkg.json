{
  "name": "wave-charts",
  "private": true,
  "version": "0.0.0",
  "description": "高下制图",
  "main": "index.js",
  "author": "高下制图",
  "repository": "http://gitlab.qiyandata.com/wave",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "projects/*",
      "services/*",
      "packages/*",
      "scripts"
    ]
  },
  "scripts": {
    "cz": "yarn git-cz",
    "core:rebuild": "yarn workspace @wave-charts/core build",
    "electron:postinstall": "yarn workspace @wave-charts/app postinstall",
    "electron:postuninstall": "yarn workspace @wave-charts/app postuninstall",
    "bump-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn test && yarn lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "resolutions": {
    "prettier": "^2.0.5",
    "@types/node": "12.12.6",
    "typescript": "^3.9.7",
    "playwright-chromium": "^1.4.1",
    "pouchdb-adapter-idb": "^7.2.1",
    "pouchdb-adapter-leveldb": "^7.2.1",
    "leveldown": "^5.6.0",
    "request": "2.88.2",
    "semver": "7.3.2",
    "node-abi": "2.19.3"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "post-commit": "git update-index --again"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "quasar": "1.14.0"
  }
}
